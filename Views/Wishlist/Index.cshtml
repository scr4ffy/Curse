@model List<BikeShop.Models.WishlistItemViewModel>

<h2>Список желаемого</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Название</th>
                <th>Изображение</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImagePath))
                        {
                            <img src="@Url.Content(item.ImagePath)" alt="@item.Name" style="max-width: 100px;" />
                        }
                        else
                        {
                            <span>Изображение не доступно</span>
                        }
                    </td>
                    <td>
                        <!-- Ссылка на карточку товара -->
                        <a asp-controller="Catalog" asp-action="Details" asp-route-id="@item.BikeId" class="btn btn-primary">Подробнее</a>
                        
                        <!-- Форма для удаления товара из списка желаемого -->
                        <form asp-action="RemoveFromWishlist" method="post" style="display:inline;">
                            <input type="hidden" name="bikeId" value="@item.BikeId" />
                            <button type="submit" class="btn btn-danger">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Список желаемого пуст.</p>
}